@model IndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

@if (User.IsInRole("Admin"))
{
    <p id="createform">
        <a asp-action="Create"
           data-ajax="true"
           data-ajax-method="GET"
           data-ajax-mode="replace"
           data-ajax-update="#createform">Create New</a>
    </p>

    <p>
        <a asp-action="Create">Create New Old</a>
    </p>
}

@if (User.IsInRole("Member"))
{
    <form asp-action="Index">
        <div class="form-group row">
               <div class="col-sm-2">History</div>
                <div class="col-sm-10">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="History" id="history"/> @*onchange="this.form.submit()" />*@
                    </div>
                </div>
        </div>
    </form>
}


<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.GymClasses.First().Name)</th>
            <th>
                @Html.DisplayNameFor(model => model.GymClasses.First().StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GymClasses.First().Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GymClasses.First().Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="gymclassesupdate">
        <partial name="GymClassesPartial" />
    </tbody>
</table>
